                        android:id="@+id/layout_genre_exploration1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_gif_genre_exploration1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/album_cover_left_radius"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_genre_exploration1"
                            style="@style/photo_text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#한국 인디"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"/>

                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/layout_genre_exploration2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_gif_genre_exploration2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
