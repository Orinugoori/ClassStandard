<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SearchActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_gradient"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.material.bottomnavigation.BottomNavigationView>




    <ScrollView
        android:id="@+id/scroll_search_page2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_in_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1700dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_top_contents"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <Button
                        android:id="@+id/btn_profile"
                        style="@style/profile_button"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintWidth_percent="0.11"
                        app:layout_constraintHeight_percent="0.55"
                        android:text="@string/profile_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/title_text_search"
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검색하기"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_profile"/>

                    <ImageView
                        android:id="@+id/iv_icon_camera"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.12"
                        android:layout_height="0dp"
                        android:src="@drawable/iv_icon_camera"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>





                <TextView
                    android:id="@+id/tv_content_for_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_content_for_me"
                    android:fontFamily="@font/circularsp_bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_search_tab"
                    app:layout_constraintStart_toStartOf="parent"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_content_for_me_search_tab"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintHeight_max="200dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_content_for_me"
                    >

                    <ImageView
                        android:id="@+id/iv_content_for_me_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/playlist_frame"/>

                    <ImageView
                        android:id="@+id/iv_content_for_me_cover"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.44"
                        android:layout_height="match_parent"
                        android:src="@drawable/iv_cover_recommend_hyang"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_content_for_me_category_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/product_sans_black"
                        android:text="플레이리스트"
                        android:textColor="@color/light_grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_content_for_me_cover"/>

                    <TextView
                        android:id="@+id/tv_content_for_me_name_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/circularsp_bold"
                        android:text="Hyang - Summer"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/iv_content_for_me_cover"
                        app:layout_constraintTop_toBottomOf="@id/tv_content_for_me_category_album"/>

                    <TextView
                        android:id="@+id/tv_content_for_me_description_album"
