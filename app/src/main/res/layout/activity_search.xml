                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Spotify 에디터가\n추천하는 트랙"
                        app:layout_constraintStart_toEndOf="@+id/iv_content_for_me_cover"
                        app:layout_constraintTop_toBottomOf="@id/tv_content_for_me_name_album"/>

                    <ImageView
                        android:id="@+id/iv_content_for_me_icon_kebab"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.1"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        android:src="@drawable/iv_kebab_icon"
                        app:tint = "#ffffff"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_content_for_me_category_album"
                        />

                    <ImageView
                        android:id="@+id/iv_content_for_me_icon_play"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.13"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/iv_play_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_genre_exploration"
