                    android:layout_height="wrap_content"
                    android:text="장르를 탐색하세요"
                    android:fontFamily="@font/circularsp_bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_content_for_me_search_tab"/>

                <LinearLayout
                    android:id="@+id/layout_genre_exploration"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintHeight_max="300dp"
                    android:weightSum="3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_genre_exploration">

